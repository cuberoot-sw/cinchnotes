!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %script(src='/js/jquery-1.7.1.min.js' type="text/javascript")
    %link(rel="stylesheet" href="/stylesheets/jquery-ui.ui-darkness-1.8.css")


    %script{:src => "js/jquery.js", :type => "text/javascript"}
    %script{:src => "/js/jquery-ui.min.js"}
    %script{:src => "/js/vendor/underscore.js"}
    %script{:src => "/js/vendor/backbone.js"}
    %script{:src => "/js/vendor/jquery.dotimeout.js"}
    %script{:src => "/js/jquery-timer.js"}

    %link{:href => "stylesheets/validationEngine.jquery.css", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "stylesheets/tagit-css/tagit-simple-blue.css", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "stylesheets/bootstrap.css", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "stylesheets/app.css", :rel => "stylesheet", :type => "text/css"}/

    %script{:src => "js/tagit-js/tagit.js"}


    %body
      %div{:class => "topbar"}
        %div{:class => "fill"}
          #UserName{:class => "pull-right"}
            -if session['user_id'].nil?
              %a{:href=> "#newUser"} Sign Up
              %a{:href=> "#login"} | Sign In
            -else
              %label{:class => 'logged_in_user'} Welcome  #{session['user_name']}
              %a{:href => "#notes" } | My Notes <!-- user/#{session['user_id']}"} My Page -->
              %a{:href => "#logout"} | Sign Out
          #notice_msg
          %h1{:style => "color:white"}
            -if session['user_id'].nil?
              %a(href='/')
                %img(src="/images/notes.png")
                %span{:style => "color:white"}Cinch Notes
            -else
              %a(href='/#notes')
                %img(src="/images/notes.png")
                %span{:style => "color:white"}Cinch Notes

      #main{:class => "container"}= yield
      %footer
        %a{:href => "http://cuberoot.in", :class => "footer-content pull-right"}
          &copy; Cube Root Software 2012
    %script{:src => "js/popup_box.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "js/validation-js/jquery.validationEngine-en.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "js/validation-js/jquery.validationEngine.js", :type => "text/javascript"}
    %script{:src => "/js/note.js"}

