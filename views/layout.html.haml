!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %script(src='/js/jquery-1.7.1.min.js' type="text/javascript")
    %script(src='/js/jquery-ui.min.js' type="text/javascript")
    %link(rel="stylesheet" href="/stylesheets/jquery-ui.ui-darkness-1.8.css")
    %body
      #UserName{:style=> "float:right; margin-bottom:10px; text-align:right"}
        -if session['user_id'] != nil
          %label User:#{session['user_id']} Signed-in currently
          %a{:href => "/notes/" } My Page <!-- user/#{session['user_id']}"} My Page -->
          %a{:href => "/logout/"} Sign Out
        -else
          %a{:href=> "/user/new"} New User
          %a{:href=> "/login/"} Sign In
      %h1 Cinch Notes
      %h3 Notes made simple
      #main= yield
