%h1 NOTES
#notice

%script#add-note-template{:type => "text/template"}
%p
  %div
    %form
      %h4 Add note
      %label{:for => "note"} Note
      %input{:name => "note", :type => "text", :value => "<%= model.get('note')%>"}/
      %input{:type => "button" ,:name => "create" ,:value => "create"}

%script#note-list-template{:type => "text/template"}
  %div
    %h3
      %a{:href => "#new"} Create New
      %table(border = 1 id="notes-tbl")
        %tr
          %th Title
          %th Action
        -for note in @notes
          %tr
            %td 
              =note.note
